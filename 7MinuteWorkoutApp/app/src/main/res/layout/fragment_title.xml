<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context=".TitleFragment">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:padding="5dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:id="@+id/linearLayout">
		<ImageView
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="@drawable/img_main_page"/>
		<LinearLayout
				android:id="@+id/startCustomButton"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:gravity="center"
				android:padding="5dp"
				android:clickable="true"
				android:background="@drawable/start_button_ripple"
				android:orientation="horizontal"
				android:focusable="true">
			<TextView android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:text="START"
					  android:textColor="@color/black"
					  android:textSize="25sp"
					  android:fontFamily="@font/aldrich"/>
		</LinearLayout>
	</LinearLayout>
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal"
			app:layout_constraintTop_toBottomOf="@+id/linearLayout"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		<TextView
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:id="@+id/bmiCalculatorButton"
				android:text="BMI"
				android:textColor="@color/black"
				android:gravity="center|center_horizontal"
				style="@style/textViewStyle"
				android:textSize="12sp"
				android:background="@drawable/item_circular_accent_background"
				app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/historyButton" app:layout_constraintTop_toTopOf="parent"/>
		<TextView android:layout_width="70dp"
				android:layout_height="70dp"
				android:id="@+id/historyButton"
				android:text="History"
				android:gravity="center|center_horizontal"
				android:textSize="12sp"
				android:textColor="@color/black"
				style="@style/textViewStyle"
				android:background="@drawable/item_circular_accent_background"
				app:layout_constraintStart_toEndOf="@+id/bmiCalculatorButton"
				app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="91dp" app:layout_constraintTop_toTopOf="@+id/bmiCalculatorButton"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="CALCULATOR"
				style="@style/textViewStyle"
				android:textSize="12sp"
				app:layout_constraintEnd_toEndOf="@+id/bmiCalculatorButton"
				app:layout_constraintStart_toStartOf="@+id/bmiCalculatorButton"
				app:layout_constraintTop_toBottomOf="@+id/bmiCalculatorButton"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>