<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		tools:context=".BMICalculatorFragment">
	<RadioGroup
			android:id="@+id/BMITypeRadioGroup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="10dp"
			android:weightSum="2"
			android:background="@drawable/radio_group_background"
			tools:layout_editor_absoluteY="10dp">
		<RadioButton
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/textViewStyle"
				android:id="@+id/metricUnitRadioButton"
				android:textStyle="bold"
				android:textSize="20sp"
				android:background="@drawable/radio_button_background"
				android:gravity="center"
				android:checked="true"
				android:text="Metric Units"
				android:button="@null"
		/>
		<RadioButton
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:id="@+id/usUnitRadioButton"
				style="@style/textViewStyle"
				android:textStyle="bold"
				android:textSize="20sp"
				android:checked="false"
				android:background="@drawable/radio_button_background"
				android:textAlignment="center"
				android:button="@null"
				android:text="US Units"
		/>
	</RadioGroup>
	<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/weightTextInputLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			tools:layout_editor_absoluteY="51dp">
		<androidx.appcompat.widget.AppCompatEditText
				android:id="@+id/weightTextInputValue"
				android:layout_width="match_parent"
				android:hint="Weight (in kg)"
				android:textSize="15dp"
				android:textStyle="bold"
				android:fontFamily="@font/aldrich"
				android:inputType="numberDecimal"
				android:textColor="@color/black"
				android:layout_height="wrap_content"/>
	</com.google.android.material.textfield.TextInputLayout>
	<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/poundTextInputLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:visibility="gone"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			tools:layout_editor_absoluteY="51dp">
		<androidx.appcompat.widget.AppCompatEditText
				android:id="@+id/poundTextInputValue"
				android:layout_width="match_parent"
				android:hint="Pound (in lb)"
				android:textSize="15dp"
				android:textStyle="bold"
				android:fontFamily="@font/aldrich"
				android:inputType="numberDecimal"
				android:textColor="@color/black"
				android:layout_height="wrap_content"/>

	</com.google.android.material.textfield.TextInputLayout>
	<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/heightTextInputLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			tools:layout_editor_absoluteY="115dp">
		<androidx.appcompat.widget.AppCompatEditText
				android:id="@+id/heightTextInputValue"
				android:layout_width="match_parent"
				android:hint="Height (in cm)"
				android:textSize="15dp"
				android:fontFamily="@font/aldrich"
				android:textStyle="bold"
				android:inputType="numberDecimal"
				android:textColor="@color/black"
				android:layout_height="wrap_content"/>

	</com.google.android.material.textfield.TextInputLayout>
	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:weightSum="2"
				  android:visibility="gone"
				  android:layout_marginTop="10dp"
				  android:id="@+id/feetInchLayout" android:orientation="horizontal"
				  tools:layout_editor_absoluteY="105dp">
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/feetTextInputLayout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
			<androidx.appcompat.widget.AppCompatEditText
					android:id="@+id/feetTextInputValue"
					android:layout_width="match_parent"
					android:hint="Feet (in ft)"
					android:textSize="15dp"
					android:fontFamily="@font/aldrich"
					android:textStyle="bold"
					android:inputType="numberDecimal"
					android:textColor="@color/black"
					android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/inchTextInputLayout"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
			<androidx.appcompat.widget.AppCompatEditText
					android:id="@+id/inchTextInputValue"
					android:layout_width="match_parent"
					android:hint="Inch (in inch)"
					android:textSize="15dp"
					android:fontFamily="@font/aldrich"
					android:textStyle="bold"
					android:inputType="numberDecimal"
					android:textColor="@color/black"
					android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="vertical"
			android:gravity="center"
			android:visibility="gone"
			android:id="@+id/resultLinearLayout"
			tools:layout_editor_absoluteY="105dp">
		<TextView
				android:id="@+id/bmitextview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Your BMI"
				android:layout_margin="5dp"
				android:fontFamily="@font/aldrich"
				android:textSize="15sp"
				android:textAllCaps="true"
				tools:layout_editor_absoluteY="123dp" tools:layout_editor_absoluteX="168dp"/>
		<TextView
				android:id="@+id/resultBMITextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="25sp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:layout_margin="5dp"
				style="@style/textViewStyle"
				android:textStyle="bold"
				android:textColor="@color/black"
				tools:text="25"
				tools:layout_editor_absoluteY="144dp" tools:layout_editor_absoluteX="173dp"/>
		<TextView
				android:id="@+id/resultInfoTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:fontFamily="@font/aldrich"
				android:layout_margin="5dp"
				tools:text="Yoo, You Are In A Good Shape"
				tools:layout_editor_absoluteY="182dp"
				tools:layout_editor_absoluteX="85dp"/>
	</LinearLayout>
	<Button
			android:id="@+id/calculateBMIButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="calculate"
			android:layout_marginTop="10dp"
			android:textAllCaps="true"
			style="@style/textViewStyle"
			android:background="@color/purple_200"
			android:textSize="20dp"
			android:textColor="@color/white"
			tools:layout_editor_absoluteY="115dp"/>

</LinearLayout>