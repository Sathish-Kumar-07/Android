<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="35sp"
        android:textColor="@color/actionButton"
        />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Clear"
                style="@style/ActionButton"
                android:onClick="Clear"
                android:text="Clear"/>
            <Button
                android:id="@+id/Back"
                style="@style/ActionButton"
                android:onClick="Delete"
                android:text="Del"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/tvOne"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="1" />
            <Button
                android:id="@+id/tvTwo"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="2"/>
            <Button
                android:id="@+id/tvThree"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="3"/>
            <Button
                android:id="@+id/tvPlus"
                style="@style/Operators"
                android:onClick="Operator"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Four"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="4"/>
            <Button
                android:id="@+id/tvFive"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="5"/>
            <Button
                android:id="@+id/tvSix"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="6"/>
            <Button
                android:id="@+id/tvMinus"
                style="@style/Operators"
                android:onClick="Operator"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Seven"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="7"/>
            <Button
                android:id="@+id/tvEight"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="8"/>
            <Button
                android:id="@+id/tvNine"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:text="9"/>
            <Button
                android:id="@+id/tvMul"
                style="@style/Operators"
                android:onClick="Operator"
                android:text="*"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Dot"
                style="@style/Operators"
                android:onClick="Dot"
                android:text="."/>
            <Button
                android:id="@+id/tvZero"
                style="@style/NumericNumbers"
                android:onClick="Digit"
                android:layout_weight="2"
                android:text="0"/>
            <Button
                android:id="@+id/tvDiv"
                style="@style/Operators"
                android:onClick="Operator"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/tvEqual"
                style="@style/EqualTo"
                android:onClick="EqualTo"
                android:text="="/>
        </LinearLayout>


    </LinearLayout>





</LinearLayout>