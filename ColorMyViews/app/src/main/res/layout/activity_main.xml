<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#999999"
			tools:context=".MainActivity">
		<TextView
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/margin_wide"
				android:layout_marginLeft="@dimen/margin_wide"
				android:layout_marginRight="@dimen/margin_wide"
				android:layout_height="wrap_content"
				android:text="@string/text_box_one"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				android:id="@+id/textBoxOne"
				style="@style/text_style"/>
		<TextView
				android:text="@string/text_box_two"
				android:layout_width="130dp"
				android:layout_height="130dp"
				style="@style/text_style"
				android:id="@+id/textBoxTwo"
				app:layout_constraintTop_toBottomOf="@+id/textBoxOne" android:layout_marginTop="20dp"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
		<TextView
				android:text="@string/text_box_three"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:id="@+id/textBoxThree"
				style="@style/text_style"
				app:layout_constraintBottom_toTopOf="@+id/textBoxFour"
				app:layout_constraintTop_toTopOf="@+id/textBoxTwo"
				app:layout_constraintStart_toEndOf="@+id/textBoxTwo" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"/>
		<TextView
				android:text="@string/text_box_four"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:id="@+id/textBoxFour"
				style="@style/text_style"
				app:layout_constraintTop_toBottomOf="@+id/textBoxThree"
				app:layout_constraintBottom_toTopOf="@+id/textBoxFive"
				app:layout_constraintStart_toEndOf="@+id/textBoxTwo" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
				android:layout_marginBottom="8dp"/>
		<TextView
				android:text="@string/text_box_five"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				style="@style/text_style"
				android:id="@+id/textBoxFive"
				app:layout_constraintBottom_toBottomOf="@+id/textBoxTwo"
				app:layout_constraintTop_toBottomOf="@+id/textBoxFour"
				app:layout_constraintStart_toEndOf="@+id/textBoxTwo" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
		<TextView
				android:text="How To Play"
				android:layout_width="0dp"
				android:textSize="25sp"
				android:fontFamily="cursive"
				android:textAlignment="center"
				android:layout_height="wrap_content"
				android:id="@+id/howToPlay"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView5"/>
		<Button
				android:text="RED"
				android:layout_width="0dp"
				android:backgroundTint="@color/red"
				android:layout_height="wrap_content" android:id="@+id/btnRed"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnBlue"
				android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/btnBlue"/>
		<Button
				android:text="Blue"
				android:layout_width="0dp"
				android:backgroundTint="@color/blue"
				android:layout_height="wrap_content"
				android:id="@+id/btnBlue"
				app:layout_constraintStart_toEndOf="@+id/btnRed"
				app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnGreen"
				app:layout_constraintTop_toBottomOf="@+id/howToPlay" app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintVertical_bias="0.947" android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"/>
		<Button
				android:text="Green"
				android:layout_width="0dp"
				android:backgroundTint="@color/Green"
				android:layout_height="wrap_content" android:id="@+id/btnGreen"
				app:layout_constraintStart_toEndOf="@+id/btnBlue" app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
				app:layout_constraintBaseline_toBaselineOf="@+id/btnBlue"/>
		<TextView
				android:text="Click On Boxes To Change Color"
				android:layout_width="0dp"
				android:fontFamily="cursive"
				android:textAlignment="center"
				android:layout_height="wrap_content" android:id="@+id/textView5"
				app:layout_constraintTop_toBottomOf="@+id/textBoxTwo"
				app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.067"
				app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/howToPlay"
				android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
				app:layout_constraintHorizontal_bias="0.0"/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>